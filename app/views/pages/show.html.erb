<div class="card">
  <div class="card-body">
      <h2 class="card-title"> <%= @sentryerror.title %> </h2>
      <h4 class="card-subtitle mb-2 text-muted"> Count: <%= @sentryerror.count %> </h4>
      <p class="card-text"> <b> The Culprit: </b> <%= @sentryerror.culprit %> </p>
      <p class="card-text"> <b> Error Message: </b> <%= @sentryerror.value %> </p>
      <% counter = 0 %>
      <% @sentryerror.links.split("newlinkishere").each do |googleLink| %>
           <% link = googleLink.split("splithere") %>

           <button type="button" class="card-link" data-toggle="modal" data-target="#exampleModal<%= counter %>">
              <%=  link[1] %> <br>
           </button>
           <div class="modal fade" id="exampleModal<%= counter %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Answers</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= link_to link[1], link[0] %>
                  <% @theAnswers = get_answer(link[0]) %>
                  <%= @theAnswers %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>
          <br><br>
          <% counter += 1 %>
       <% end %>
  </div>
</div>
